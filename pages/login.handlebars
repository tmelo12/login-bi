<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body class="body">
	<img class="logo-defesa" src="images/logo-defesa.png" alt="Defesa Civil do Amazonas">
	<div class="card-login">
			<img class="top-detail" src="images/top-detail.png">
				<span class="login100-form-title">
					Bem-Vindo(a)
				</span>
				<form action="/" method="post">
					<div class="wrap-input100 validate-input" data-validate = "Usuario obrigatório">
						<div class="input-icons">
							<i class="fa fa-user icon" aria-hidden="true"> </i>
							<input class="input-field" type="text" name="login" placeholder="Usuário">
						</div>
					</div>

					<div class="wrap-input100 validate-input" data-validate = "Senha obrigatória">
						<div class="input-icons">
							<i class="fa fa-user icon" aria-hidden="true"> </i>
							<input class="input-field" type="password" name="senha" placeholder="Senha">
						</div>
					</div>
					
					<div class="container-login100-form-btn">
						<button class="login100-form-btn" type="submit">
							Entrar
						</button>
					</div>

					<div class="text-center p-t-12" style="color:white">
						{{message}}						
					</div>
					<img class="logo-gov" src="images/governo-amazonas.png">
				</form>
	</div>
	
<!--===============================================================================================-->	
	<script src="vendor/jquery/jquery-3.2.1.min.js"></script>
<!--===============================================================================================-->
	<script src="vendor/bootstrap/js/popper.js"></script>
	<script src="vendor/bootstrap/js/bootstrap.min.js"></script>
<!--===============================================================================================-->
	<script src="vendor/select2/select2.min.js"></script>
<!--===============================================================================================-->
	<script src="vendor/tilt/tilt.jquery.min.js"></script>
	<script >
		$('.js-tilt').tilt({
			scale: 1.1
		})
	</script>
<!--===============================================================================================-->
	<script src="js/main.js"></script>

</body>
</html>